<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:newUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:newUI.ViewModels"
        xmlns:teachers1="clr-namespace:newUI.ViewModels.ClassroomsPage.Classrooms"
        xmlns:classrooms="clr-namespace:newUI.ViewModels.ClassroomsPage.Classrooms"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="300"
        x:Class="newUI.Views.ClassroomsPage.ClassroomCreation.ClassroomCreationWindow"
        Title="Создание аудитории"
        Width="370" Height="300"
        x:DataType="classrooms:ClassroomCreationViewModel">
    
    <Design.DataContext>
        <classrooms:ClassroomCreationViewModel />
    </Design.DataContext>
    
    <StackPanel Margin="20" Spacing="15">
        
        <TextBlock Text="Добавление новой аудитории" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" />
        
        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Номер/название:" Width="120" VerticalAlignment="Center" />
            <TextBox Watermark="Введите номер/название" 
                     Width="200" 
                     Text="{Binding Classroom.Name, Mode=TwoWay}" 
                     TextChanging="NameTextBox_TextChanging" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10" 
                    Margin="0,20,0,0">
            
            <!-- <Button Content="Отмена" Command="{Binding Classroom.CancelCommand}" /> -->
            
            <Button Content="Сохранить" 
                    Command="{Binding SaveChangesCommand}" 
                    Classes="accent" />
        </StackPanel>
        
    </StackPanel>
</Window>