<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:schedule="clr-namespace:newUI.ViewModels.Schedule"
             xmlns:views="clr-namespace:newUI.Views.ScheduleTable"
             xmlns:lessons="clr-namespace:newUI.Views.LessonCard"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="800"
             x:Class="newUI.Views.ScheduleView.ScheduleView"
             x:DataType="schedule:ScheduleViewModel">
    
    <Design.DataContext>
        <schedule:ScheduleViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *, Auto">
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="10">
            <TextBlock Text="Текущее расписание:" VerticalAlignment="Center"/>
            
            <ComboBox ItemsSource="{Binding ScheduleList}" 
                      SelectedItem="{Binding CurrentSchedule}"
                      Width="200"
                      HorizontalAlignment="Left">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <Button Content="Сохранить изменения" 
                    Command="{Binding SaveScheduleCommand}"
                    Background="Green"
                    Foreground="White"/>
        </StackPanel>
        
        <Grid Grid.Row="1" ColumnDefinitions="*, 250" Margin="10, 0, 10, 10">
            
            <ContentControl Grid.Column="0" Content="{Binding Table}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <views:Table/> 
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
            
            <Border Grid.Column="1" 
                    BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" 
                    Margin="10,0,0,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="Буфер уроков" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Buffer.LessonCards}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <lessons:LessonCard DataContext="{Binding .}" Margin="0,5"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
        
        <TextBlock Grid.Row="2" Text="Готово к работе" Margin="10" Foreground="Gray"/>
    </Grid>
</UserControl>