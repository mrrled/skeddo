<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:editors="clr-namespace:newUI.ViewModels.SchedulePage.StudyGroups"
        x:Class="newUI.Views.SchedulePage.StudyGroups.StudyGroupEditorWindow"
        Title=""
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SizeToContent="WidthAndHeight"
        MaxWidth="500"
        x:DataType="editors:StudyGroupEditorViewModel">

    <Window.Styles>
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="#2196F3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="15, 8" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        
        <Style Selector="Button.accent:pointerover">
            <Setter Property="Background" Value="#1976D2" />
        </Style>
        
        <Style Selector="Button.subgroup-delete">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#E53935" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
        </Style>
    </Window.Styles>

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="{Binding HeaderText}"
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10" />

        <!-- Название группы -->
        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Название:"
                       Width="100"
                       VerticalAlignment="Center"
                       FontSize="16" />
            <Border CornerRadius="8"
                    BorderBrush="#BDBDBD"
                    BorderThickness="1"
                    Background="White"
                    Width="220"
                    Height="36"
                    Padding="5, 0">
                <TextBox Watermark="Введите название"
                         Text="{Binding StudyGroupName, Mode=TwoWay}"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalAlignment="Center" />
            </Border>
        </StackPanel>

        <!-- Подгруппы -->
        <StackPanel Margin="0,15,0,0">
            <TextBlock Text="Подгруппы:" 
                       FontSize="16" 
                       Margin="0,0,0,5"/>
            
            <!-- Список подгрупп -->
            <ItemsControl ItemsSource="{Binding Subgroups}"
                          Margin="10,0,0,10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="{Binding Name}" 
                                       VerticalAlignment="Center"
                                       Grid.Column="0"/>
                                      
                            <Button Content="✕" 
                                    Classes="subgroup-delete"
                                    Command="{Binding $parent[ItemsControl].((editors:StudyGroupEditorViewModel)DataContext).DeleteSubgroupCommand}"
                                    CommandParameter="{Binding}"
                                    Grid.Column="1"
                                    ToolTip.Tip="Удалить подгруппу"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- Кнопка добавления -->
            <Button Content="+ Добавить подгруппу" 
                    Command="{Binding AddSubgroupCommand}"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,0"
                    Padding="10,5"
                    Background="Transparent"
                    BorderBrush="#2196F3"
                    BorderThickness="1"/>
        </StackPanel>

        <!-- Кнопки сохранения/удаления -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Content="Удалить"
                    Command="{Binding DeleteCommand}"
                    IsVisible="{Binding IsEditMode}"
                    Background="#E53935"
                    Foreground="White"
                    CornerRadius="8"
                    Padding="15,8" />
                    
            <Button Content="Сохранить"
                    Command="{Binding SaveCommand}"
                    Classes="accent" />
        </StackPanel>
    </StackPanel>
</Window>