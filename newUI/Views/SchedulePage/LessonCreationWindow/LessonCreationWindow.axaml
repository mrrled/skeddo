<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:newUI.ViewModels.SchedulePage.Lessons"
        mc:Ignorable="d" 
        d:DesignWidth="500" d:DesignHeight="600"
        x:Class="newUI.Views.SchedulePage.LessonCreationWindow.LessonCreationWindow"
        Title=""
        Width="500" Height="650"
        MinWidth="450" MinHeight="550"
        x:DataType="vm:LessonEditViewModel">
    
    <Design.DataContext>
        <vm:LessonEditViewModel />
    </Design.DataContext>
    
    <Window.Styles>
        <Style Selector="TextBlock.Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="170"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="MinWidth" Value="230"/>
        </Style>
        
        <Style Selector="StackPanel.InputRow">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Spacing" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Window.Styles>
    
    <DockPanel Margin="20">
        
        <!-- Заголовок -->
        <TextBlock DockPanel.Dock="Top" 
                   Text="Создание нового урока" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Основное содержимое с прокруткой -->
        <ScrollViewer DockPanel.Dock="Top"
                      VerticalScrollBarVisibility="Auto"
                      MaxHeight="450">
            <StackPanel Spacing="15">
                
                <!-- Выбор предмета -->
                <StackPanel Classes="InputRow">
                    <TextBlock Text="Предмет:" Classes="Label"/>
                    
                    <ComboBox HorizontalAlignment="Right" ItemsSource="{Binding Subjects}"
                              SelectedItem="{Binding SelectedSubject, Mode=TwoWay}"
                              PlaceholderText="Выберите предмет...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- Выбор преподавателя -->
                <StackPanel Classes="InputRow">
                    <TextBlock Text="Преподаватель:" Classes="Label"/>
                    
                    <ComboBox HorizontalAlignment="Right" ItemsSource="{Binding Teachers}"
                              SelectedItem="{Binding SelectedTeacher, Mode=TwoWay}"
                              PlaceholderText="Выберите преподавателя...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="{Binding Surname}"/>
                                    <TextBlock Text="{Binding Name, StringFormat=' {0}'}"/>
                                    <TextBlock Text="{Binding Patronymic, StringFormat=' {0}'}"
                                               Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- Выбор учебной группы -->
                <StackPanel Classes="InputRow">
                    <TextBlock Text="Учебная группа:" Classes="Label"/>
                    
                    <ComboBox HorizontalAlignment="Right" ItemsSource="{Binding StudyGroups}"
                              SelectedItem="{Binding SelectedStudyGroup, Mode=TwoWay}"
                              PlaceholderText="Выберите группу...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- Выбор кабинета -->
                <StackPanel Classes="InputRow">
                    <TextBlock Text="Кабинет:" Classes="Label"/>
                    
                    <ComboBox HorizontalAlignment="Right" ItemsSource="{Binding Classrooms}"
                              SelectedItem="{Binding SelectedClassroom, Mode=TwoWay}"
                              PlaceholderText="Выберите кабинет...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- Выбор номера урока -->
                <StackPanel Classes="InputRow">
                    <TextBlock Text="Номер урока:" Classes="Label"/>
                    
                    <ComboBox  ItemsSource="{Binding TimeSlots}"
                              SelectedItem="{Binding SelectedLessonNumber, Mode=TwoWay}"
                              PlaceholderText="Выберите номер..."
                              Width="200">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Number}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                
                <!-- Информация о выбранных параметрах -->
                <Border Background="#f5f5f5" 
                        Padding="15" 
                        CornerRadius="5"
                        Margin="0,20,0,0">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Информация об уроке:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Предмет:" Foreground="Gray"/>
                            <TextBlock Text="{Binding SelectedSubject.Name}" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Преподаватель:" Foreground="Gray"/>
                            <TextBlock Text="{Binding SelectedTeacher.Surname}"/>
                            <TextBlock Text="{Binding SelectedTeacher.Name, StringFormat=' {0}'}"/>
                            <TextBlock Text="{Binding SelectedTeacher.Patronymic, StringFormat=' {0}'}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Группа:" Foreground="Gray"/>
                            <TextBlock Text="{Binding SelectedStudyGroup.Name}" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Кабинет:" Foreground="Gray"/>
                            <TextBlock Text="{Binding SelectedClassroom.Name}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Номер урока:" Foreground="Gray"/>
                            <TextBlock 
                                Text="{Binding SelectedLessonNumber.Number, StringFormat='{}{0}'}"
                                FontWeight="Bold"
                                IsVisible="{Binding }"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Кнопки действий -->
        <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10" 
                    Margin="0,20,0,0">
            
            <Button Content="Отмена" 
                    Command="{Binding CancelCommand}"
                    Background="Transparent"
                    BorderBrush="Gray"/>
            
            <Button Content="Удалить урок" 
                    Command="{Binding DeleteCommand}"
                    Background="Transparent"
                    IsVisible="{Binding !IsCreation}"
                    BorderBrush="Gray"/>
            
            <Button Content="Сохранить" 
                    Command="{Binding SaveCommand}"
                    Classes="accent"/>
            
        </StackPanel>
        
    </DockPanel>
</Window>