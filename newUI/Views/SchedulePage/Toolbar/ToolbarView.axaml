<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:toolbar="clr-namespace:newUI.ViewModels.SchedulePage.Toolbar"
             x:Class="newUI.Views.SchedulePage.Toolbar.ToolbarView"
             x:DataType="toolbar:ToolbarViewModel">

    <UserControl.Styles>
        <!-- Общий стиль для кнопок тулбара -->
        <Style Selector="Button.ToolbarButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style Selector="Button.ToolbarButton:pointerover">
            <Setter Property="Background" Value="#E0E0E0"/>
        </Style>

        <Style Selector="Button.ToolbarButton:pressed">
            <Setter Property="Background" Value="#BDBDBD"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#FAFAFA"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0"
            Padding="12">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8">

            <!-- Сохранить -->
            <Button Classes="ToolbarButton" Command="{Binding SaveCommand}">
                <icons:MaterialIcon Kind="ContentSave" Width="24" Height="24" Foreground="#757575"/>
            </Button>

            <!-- Экспорт -->
            <Button Classes="ToolbarButton" Command="{Binding ExportCommand}">
                <icons:MaterialIcon Kind="FileExportOutline" Width="24" Height="24" Foreground="#757575"/>
            </Button>

            <!-- Удалить -->
            <Button Classes="ToolbarButton" Command="{Binding DeleteCommand}">
                <icons:MaterialIcon Kind="DeleteOutline" Width="24" Height="24" Foreground="#757575"/>
            </Button>

            <!-- Закрыть -->
            <Button Classes="ToolbarButton" Command="{Binding CloseCommand}">
                <icons:MaterialIcon Kind="Close" Width="24" Height="24" Foreground="#757575"/>
            </Button>

        </StackPanel>
    </Border>
</UserControl>
