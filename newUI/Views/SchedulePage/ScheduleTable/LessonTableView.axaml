<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:newUI.ViewModels.SchedulePage.Schedule"
             xmlns:lessonCard="clr-namespace:newUI.Views.SchedulePage.LessonCard"
             x:Class="newUI.Views.SchedulePage.ScheduleTable.LessonTableView"
             x:DataType="vm:LessonTableViewModel">
    
    <Design.DataContext>
        <vm:LessonTableViewModel />
    </Design.DataContext>
    
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Пустая ячейка в углу -->
            <Border Grid.Row="0" Grid.Column="0" 
                   Width="50" Height="30"
                   Background="LightGray" 
                   BorderBrush="Gray" BorderThickness="1"/>

            <!-- Заголовки столбцов (StudyGroups) -->
            <ItemsControl Grid.Row="0" Grid.Column="1" 
                         ItemsSource="{Binding Columns}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" 
                               Width="{DynamicResource LessonCardWidth}" Height="30"
                               Background="LightBlue">
                            <TextBlock Text="{Binding Name}" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      FontWeight="Bold"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Заголовки строк (LessonNumbers) -->
            <ItemsControl Grid.Row="1" Grid.Column="0" 
                         ItemsSource="{Binding Rows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" 
                               Width="50" Height="{DynamicResource LessonCardHeight}"
                               Background="LightGray">
                            <TextBlock Text="{Binding RowHeader.Number}" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      FontWeight="Bold"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Основная таблица с ячейками -->
            <ItemsControl Grid.Row="1" Grid.Column="1" 
                         ItemsSource="{Binding Rows}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Используем Cells (ObservableCollection) вместо CellDictionary -->
                        <ItemsControl ItemsSource="{Binding Cells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" 
                                            Width="{DynamicResource LessonCardWidth}"
                                            Height="{DynamicResource LessonCardHeight}">
                                        <lessonCard:LessonCard IsVisible="{Binding IsVisible}"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</UserControl>