<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:newUI.ViewModels.SchedulePage.Lessons"
        x:Class="newUI.Views.SchedulePage.Lessons.LessonEditorWindow"
        Title=""
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SizeToContent="WidthAndHeight"
        MaxWidth="500"
        x:DataType="vm:LessonEditorViewModel">

    <Window.Styles>
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="#2196F3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="15, 8" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style Selector="Button.accent:disabled">
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="Background" Value="#BDBDBD" />
        </Style>
        <Style Selector="TextBlock.Label">
            <Setter Property="Width" Value="120" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style Selector="Border.InputWrapper">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BorderBrush" Value="#BDBDBD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Height" Value="38" />
            <Setter Property="Padding" Value="5, 0" />
        </Style>
    </Window.Styles>

    <StackPanel Margin="25" Spacing="12">
        <TextBlock Text="{Binding HeaderText}"
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                   Margin="0,0,0,10" />

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Предмет:" Classes="Label" />
            <Border Classes="InputWrapper">
                <ComboBox ItemsSource="{Binding Subjects}" SelectedItem="{Binding SelectedSubject}"
                          HorizontalAlignment="Stretch" BorderThickness="0" Background="Transparent">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Учитель:" Classes="Label" />
            <Border Classes="InputWrapper">
                <ComboBox ItemsSource="{Binding Teachers}" SelectedItem="{Binding SelectedTeacher}"
                          HorizontalAlignment="Stretch" BorderThickness="0" Background="Transparent">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name, FallbackValue=''}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Группа:" Classes="Label" />
            <Border Classes="InputWrapper">
                <ComboBox ItemsSource="{Binding StudyGroups}" SelectedItem="{Binding SelectedStudyGroup}"
                          HorizontalAlignment="Stretch" BorderThickness="0" Background="Transparent">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Border>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Spacing="10" IsVisible="{Binding CanSeeSubgroups}">
            <TextBlock Text="" Classes="Label" />
            <CheckBox Content="Указать подгруппу"
                      IsChecked="{Binding ShowSubgroups}"
                      Margin="0,5,0,0" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Spacing="10" IsVisible="{Binding ShowSubgroups}">
            <TextBlock Text="Подгруппа:" Classes="Label" />
            <Border Classes="InputWrapper">
                <ComboBox ItemsSource="{Binding StudySubgroups}" SelectedItem="{Binding SelectedStudySubgroup}"
                          HorizontalAlignment="Stretch" BorderThickness="0" Background="Transparent">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Кабинет:" Classes="Label" />
            <Border Classes="InputWrapper">
                <ComboBox ItemsSource="{Binding Classrooms}" SelectedItem="{Binding SelectedClassroom}"
                          HorizontalAlignment="Stretch" BorderThickness="0" Background="Transparent">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="№ Урока:" Classes="Label" />
            <Border Classes="InputWrapper">
                <ComboBox ItemsSource="{Binding TimeSlots}" SelectedItem="{Binding SelectedLessonNumber}"
                          HorizontalAlignment="Stretch" BorderThickness="0" Background="Transparent">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Number}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
            <Button Content="Удалить" Command="{Binding DeleteCommand}"
                    IsVisible="{Binding IsEditMode}"
                    Background="#E53935" Foreground="White"
                    CornerRadius="8" Padding="15,8" />

            <Button Content="Сохранить" Command="{Binding SaveCommand}" Classes="accent" />
        </StackPanel>
    </StackPanel>
</Window>