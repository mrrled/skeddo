<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:newUI.ViewModels.SchedulePage.Schedule"
             xmlns:lessons="clr-namespace:newUI.Views.SchedulePage.Lessons"
             xmlns:converters="clr-namespace:newUI.Converters"
             xmlns:dto="clr-namespace:Application.DtoModels;assembly=Application"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="newUI.Views.SchedulePage.Schedule.LessonTableView"
             x:DataType="vm:LessonTableViewModel">
    
    <UserControl.Resources>
        <converters:GroupWideBackgroundConverter x:Key="GroupWideBackgroundConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Button.IconButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="4" />
        </Style>

        <Style Selector="Button.IconButton:pointerover">
            <Setter Property="Background" Value="#E0E0E0" />
        </Style>
    </UserControl.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">

        <Grid>
            <!-- Теперь 3 строки! -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- 0: Заголовки групп -->
                <RowDefinition Height="Auto" /> <!-- 1: Заголовки подгрупп -->
                <RowDefinition Height="*" />    <!-- 2: Строки с уроками -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- ===================== -->
            <!-- Пустая ячейка в углу (занимает 2 верхние строки) -->
            <!-- ===================== -->
            <Border Grid.Row="0" Grid.Column="0"
                    Grid.RowSpan="2"
                    Width="50"
                    Height="60"
                    Background="LightGray"
                    BorderBrush="Gray"
                    BorderThickness="1" />

            <!-- ===================== -->
            <!-- Верхний уровень: Заголовки ГРУПП (Row 0) -->
            <!-- ===================== -->
            <StackPanel Grid.Row="0" Grid.Column="1"
                        Orientation="Horizontal"
                        Height="30">

                <ItemsControl ItemsSource="{Binding GroupHeaders}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="dto:StudyGroupDto">
                            <Button
                                Command="{Binding $parent[ItemsControl].((vm:LessonTableViewModel)DataContext).EditStudyGroupCommand}"
                                CommandParameter="{Binding}"
                                Padding="0"
                                BorderThickness="1"
                                BorderBrush="Gray"
                                CornerRadius="0"
                                Width="{Binding ColumnSpan, 
                                       Converter={StaticResource ColumnSpanToWidthConverter}}"
                                Height="30"
                                Background="LightBlue"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center">

                                <TextBlock Text="{Binding Name}"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Кнопка добавления StudyGroup -->
                <Button Width="30"
                        Height="30"
                        Margin="2,0,0,0"
                        Command="{Binding AddStudyGroupCommand}"
                        Classes="IconButton">
                    <Viewbox Width="16" Height="16">
                        <icons:MaterialIcon Kind="Plus" />
                    </Viewbox>
                </Button>
            </StackPanel>

            <!-- ===================== -->
            <!-- Нижний уровень: Заголовки ПОДГРУПП (Row 1) -->
            <!-- ===================== -->
            <StackPanel Grid.Row="1" Grid.Column="1"
                        Orientation="Horizontal"
                        Height="30">

                <ItemsControl ItemsSource="{Binding FlatColumns}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Padding="0"
                                    BorderThickness="1"
                                    BorderBrush="Gray"
                                    CornerRadius="0"
                                    Width="{DynamicResource LessonCardWidth}"
                                    Height="30"
                                    Background="LightCyan"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center">

                                <TextBlock Text="{Binding DisplayName}"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- ===================== -->
            <!-- Заголовки LessonNumber (Row 2) -->
            <!-- ===================== -->
            <StackPanel Grid.Row="2" Grid.Column="0">

                <ItemsControl ItemsSource="{Binding Rows}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Command="{Binding $parent[ItemsControl].((vm:LessonTableViewModel)DataContext).EditLessonNumberCommand}"
                                CommandParameter="{Binding RowHeader}"
                                Padding="0"
                                BorderThickness="1"
                                BorderBrush="Gray"
                                CornerRadius="0"
                                Width="50"
                                Height="{DynamicResource LessonCardHeight}"
                                Background="LightGray">

                                <TextBlock Text="{Binding RowHeader.Number}"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Кнопка добавления LessonNumber -->
                <Button Width="50"
                        Height="30"
                        Margin="0,2,0,0"
                        Command="{Binding AddLessonNumberCommand}"
                        Classes="IconButton">
                    <Viewbox Width="16" Height="16">
                        <icons:MaterialIcon Kind="Plus" />
                    </Viewbox>
                </Button>
            </StackPanel>

            <!-- ===================== -->
            <!-- Таблица уроков (Row 2, Column 1) -->
            <!-- ===================== -->
            <ItemsControl Grid.Row="2" Grid.Column="1"
                          ItemsSource="{Binding Rows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ItemsControl ItemsSource="{Binding Cells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Условное отображение: если ColumnSpan > 1, то шире -->
                                    <Border BorderBrush="Gray"
                                             BorderThickness="1"
                                             Width="{Binding ColumnSpan, 
                                             Converter={StaticResource ColumnSpanToWidthConverter},
                                             FallbackValue={StaticResource LessonCardWidth}}"
                                             Height="{DynamicResource LessonCardHeight}">
    
                                        <!-- Используем привязку для Background -->
                                        <Border.Background>
                                            <Binding Path="IsGroupWideLesson">
                                                <Binding.Converter>
                                                    <converters:GroupWideBackgroundConverter/>
                                                </Binding.Converter>
                                            </Binding>
                                        </Border.Background>
    
                                        <!-- Контент -->
                                        <Interaction.Behaviors>
                                            <EventTriggerBehavior EventName="PointerPressed">
                                                <InvokeCommandAction Command="{Binding ClickCommand}" />
                                            </EventTriggerBehavior>
                                        </Interaction.Behaviors>
    
                                        <lessons:LessonCardView />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Grid>
    </ScrollViewer>
</UserControl>