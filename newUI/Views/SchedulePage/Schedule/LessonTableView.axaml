<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:newUI.ViewModels.SchedulePage.Schedule"
             xmlns:lessons="clr-namespace:newUI.Views.SchedulePage.Lessons"
             xmlns:dto="clr-namespace:Application.DtoModels;assembly=Application"
             x:Class="newUI.Views.SchedulePage.Schedule.LessonTableView"
             x:DataType="vm:LessonTableViewModel">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0"
                    Width="50" Height="30"
                    Background="LightGray"
                    BorderBrush="Gray" BorderThickness="1" />

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <ItemsControl ItemsSource="{Binding Columns}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="dto:StudyGroupDto">
                            <Button Command="{Binding $parent[ItemsControl].((vm:LessonTableViewModel)DataContext).EditStudyGroupCommand}"
                                    CommandParameter="{Binding}"
                                    Padding="0"
                                    BorderThickness="1"
                                    BorderBrush="Gray"
                                    CornerRadius="0"
                                    Width="{DynamicResource LessonCardWidth}" 
                                    Height="30"
                                    Background="LightBlue"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center">
                                <TextBlock Text="{Binding Name}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold" />
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="+" Width="30" Height="30" Margin="2,0,0,0"
                        Command="{Binding AddStudyGroupCommand}" />
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0">
                <ItemsControl ItemsSource="{Binding Rows}">
                    <ItemsControl ItemsSource="{Binding Rows}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding $parent[ItemsControl].((vm:LessonTableViewModel)DataContext).EditLessonNumberCommand}"
                                        CommandParameter="{Binding RowHeader}"
                                        Padding="0"
                                        BorderThickness="1"
                                        BorderBrush="Gray"
                                        CornerRadius="0"
                                        Width="50"
                                        Height="{DynamicResource LessonCardHeight}"
                                        Background="LightGray">
                                    <TextBlock Text="{Binding RowHeader.Number}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold" />
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ItemsControl>

                <Button Content="+" Width="50" Height="30" Margin="0,2,0,0"
                        Command="{Binding AddLessonNumberCommand}" />
            </StackPanel>

            <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Rows}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ItemsControl ItemsSource="{Binding Cells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="LessonBorder"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            Width="{DynamicResource LessonCardWidth}"
                                            Height="{DynamicResource LessonCardHeight}">
                                        <lessons:LessonCardView IsVisible="{Binding IsVisible}" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</UserControl>