<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:newUI.ViewModels.SchedulePage.Schedule"
             xmlns:lessons="clr-namespace:newUI.Views.SchedulePage.Lessons"
             xmlns:converters="clr-namespace:newUI.Converters"
             xmlns:dto="clr-namespace:Application.DtoModels;assembly=Application"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:global="clr-namespace:"
             x:Class="newUI.Views.SchedulePage.Schedule.LessonTableView"
             x:DataType="vm:LessonTableViewModel"
             UseLayoutRounding="True"> <UserControl.Resources>
        <converters:GroupWideBackgroundConverter x:Key="GroupWideBackgroundConverter" />
        <converters:ColumnSpanToWidthConverter x:Key="ColumnSpanToWidthConverter" />
        <converters:SubgroupCountToHeightConverter x:Key="SubgroupCountToHeightConverter" />
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Button.IconButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="4" />
        </Style>

        <Style Selector="ItemsControl#GroupItemsControl Button:pointerover">
            <Setter Property="Panel.ZIndex" Value="100" />
        </Style>
    </UserControl.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid HorizontalAlignment="Left"> <Grid.RowDefinitions>
                <RowDefinition Height="60" /> 
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Width="50" Height="60"
                    Background="LightGray" BorderBrush="Gray" BorderThickness="1" />

            <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left">
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Height="30" Panel.ZIndex="1">
                    <ItemsControl x:Name="SubgroupItemsControl" ItemsSource="{Binding FlatColumns}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="0" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="global:ColumnViewModel">
                                <Panel Width="150" Height="30" Margin="-1,0,0,0"> <Border BorderThickness="1" 
                                            BorderBrush="Gray" 
                                            Background="LightCyan"
                                            IsVisible="{Binding IsSubgroupVisible}"> 
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="12"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" />
                                    </Border>
                                </Panel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <Grid ColumnDefinitions="Auto, Auto" VerticalAlignment="Top">
                    <ItemsControl x:Name="GroupItemsControl" ItemsSource="{Binding GroupHeaders}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="0" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="dto:StudyGroupDto">
                                <Button Command="{Binding $parent[ItemsControl].((vm:LessonTableViewModel)DataContext).EditStudyGroupCommand}"
                                        CommandParameter="{Binding}"
                                        Padding="0" BorderThickness="1" BorderBrush="Gray" CornerRadius="0"
                                        Background="LightBlue"
                                        VerticalAlignment="Top"
                                        Margin="-1,0,0,0"> <Button.Width>
                                        <MultiBinding Converter="{StaticResource ColumnSpanToWidthMultiConverter}">
                                            <Binding Path="StudySubgroups.Count" />
                                        </MultiBinding>
                                    </Button.Width>
                                    <Button.Height>
                                        <Binding Path="StudySubgroups.Count"
                                                 Converter="{StaticResource SubgroupCountToHeightConverter}" />
                                    </Button.Height>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Grid.Column="1" Width="30" Height="30" Margin="5,0,0,0"
                            Command="{Binding AddStudyGroupCommand}" Classes="IconButton">
                        <icons:MaterialIcon Kind="Plus" Width="16" Height="16" />
                    </Button>
                </Grid>
            </Grid>

            <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">
                <ItemsControl ItemsSource="{Binding Rows}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding $parent[ItemsControl].((vm:LessonTableViewModel)DataContext).EditLessonNumberCommand}"
                                    CommandParameter="{Binding RowHeader}"
                                    Padding="0" BorderThickness="1" BorderBrush="Gray" CornerRadius="0"
                                    Width="50" Height="{DynamicResource LessonCardHeight}"
                                    Background="LightGray"
                                    Margin="0,-1,0,0">
                                <TextBlock Text="{Binding RowHeader.Number}" FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Width="50" Height="30" Margin="0,5,0,0"
                        Command="{Binding AddLessonNumberCommand}" Classes="IconButton">
                    <icons:MaterialIcon Kind="Plus" Width="16" Height="16" />
                </Button>
            </StackPanel>

            <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Rows}" HorizontalAlignment="Left">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ItemsControl ItemsSource="{Binding Cells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="0" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1"
                                            Width="{Binding ColumnSpan, Converter={StaticResource ColumnSpanToWidthConverter}}"
                                            Height="{DynamicResource LessonCardHeight}"
                                            Margin="-1,-1,0,0"> <Border.Background>
                                            <Binding Path="IsGroupWideLesson"
                                                     Converter="{StaticResource GroupWideBackgroundConverter}" />
                                        </Border.Background>
                                        <i:Interaction.Behaviors>
                                            <ia:EventTriggerBehavior EventName="PointerPressed">
                                                <ia:InvokeCommandAction Command="{Binding ClickCommand}" />
                                            </ia:EventTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                        <lessons:LessonCardView />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</UserControl>