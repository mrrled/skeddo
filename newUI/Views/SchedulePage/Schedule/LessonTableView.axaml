<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:newUI.ViewModels.SchedulePage.Schedule"
             xmlns:lessons="clr-namespace:newUI.Views.SchedulePage.Lessons"
             xmlns:converters="clr-namespace:newUI.Converters"
             xmlns:dto="clr-namespace:Application.DtoModels;assembly=Application"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:global="clr-namespace:"
             x:Class="newUI.Views.SchedulePage.Schedule.LessonTableView"
             x:DataType="vm:LessonTableViewModel">

    <UserControl.Resources>
        <converters:GroupWideBackgroundConverter x:Key="GroupWideBackgroundConverter" />
        <converters:ColumnSpanToWidthConverter x:Key="ColumnSpanToWidthConverter" />
        <converters:SubgroupCountToHeightConverter x:Key="SubgroupCountToHeightConverter" />
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Button.IconButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="4" />
        </Style>
        
        <Style Selector="ItemsControl#SubgroupItemsControl > ContentPresenter" x:DataType="global:ColumnViewModel">
            <Setter Property="IsVisible" Value="{Binding IsSubgroupVisible}" />
        </Style>
    </UserControl.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Width="50" Height="60"
                    Background="LightGray" BorderBrush="Gray" BorderThickness="1" />

            <Grid Grid.Row="0" Grid.Column="1">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Height="30" Panel.ZIndex="1">
                    <ItemsControl x:Name="SubgroupItemsControl" ItemsSource="{Binding FlatColumns}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="global:ColumnViewModel">
                                <Border BorderThickness="1,0,1,1" BorderBrush="Gray" Background="LightCyan"
                                        Width="150" Height="30">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Panel.ZIndex="10">
                    <ItemsControl ItemsSource="{Binding GroupHeaders}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="dto:StudyGroupDto">
                                <Button
                                    Command="{Binding $parent[ItemsControl].((vm:LessonTableViewModel)DataContext).EditStudyGroupCommand}"
                                    CommandParameter="{Binding}"
                                    Padding="0" BorderThickness="1" BorderBrush="Gray" CornerRadius="0"
                                    Width="{Binding ColumnSpan, Converter={StaticResource ColumnSpanToWidthConverter}}"
                                    Background="LightBlue"
                                    VerticalAlignment="Top">
                                    <Button.Height>
                                        <Binding Path="StudySubgroups.Count"
                                                 Converter="{StaticResource SubgroupCountToHeightConverter}" />
                                    </Button.Height>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Width="30" Height="30" Margin="2,0,0,0"
                            Command="{Binding AddStudyGroupCommand}" Classes="IconButton">
                        <icons:MaterialIcon Kind="Plus" Width="16" Height="16" />
                    </Button>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Grid.Column="0">
                <ItemsControl ItemsSource="{Binding Rows}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Command="{Binding $parent[ItemsControl].((vm:LessonTableViewModel)DataContext).EditLessonNumberCommand}"
                                CommandParameter="{Binding RowHeader}"
                                Padding="0" BorderThickness="1" BorderBrush="Gray" CornerRadius="0"
                                Width="50" Height="{DynamicResource LessonCardHeight}"
                                Background="LightGray">
                                <TextBlock Text="{Binding RowHeader.Number}" FontWeight="Bold"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Width="50" Height="30" Margin="0,2,0,0"
                        Command="{Binding AddLessonNumberCommand}" Classes="IconButton">
                    <icons:MaterialIcon Kind="Plus" Width="16" Height="16" />
                </Button>
            </StackPanel>

            <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Rows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ItemsControl ItemsSource="{Binding Cells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1"
                                            Width="{Binding ColumnSpan, Converter={StaticResource ColumnSpanToWidthConverter}, FallbackValue=150}"
                                            Height="{DynamicResource LessonCardHeight}">
                                        <Border.Background>
                                            <Binding Path="IsGroupWideLesson"
                                                     Converter="{StaticResource GroupWideBackgroundConverter}" />
                                        </Border.Background>
                                        <i:Interaction.Behaviors>
                                            <ia:EventTriggerBehavior EventName="PointerPressed">
                                                <ia:InvokeCommandAction Command="{Binding ClickCommand}" />
                                            </ia:EventTriggerBehavior>
                                        </i:Interaction.Behaviors>
                                        <lessons:LessonCardView />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</UserControl>