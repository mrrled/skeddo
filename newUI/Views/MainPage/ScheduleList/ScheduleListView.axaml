<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scheduleList="clr-namespace:newUI.ViewModels.MainPage.ScheduleList"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="newUI.Views.MainPage.ScheduleList.ScheduleListView"
             mc:Ignorable="d"
             x:DataType="scheduleList:ScheduleListViewModel">

    <UserControl.Styles>
        <!-- Общий стиль для всех кнопок -->
        <Style Selector="Button.ToolbarButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="8" />
        </Style>

        <Style Selector="Button.ToolbarButton:pointerover">
            <Setter Property="Background" Value="#E0E0E0" />
        </Style>
    </UserControl.Styles>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Главная страница"
                   Grid.Row="0"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16" />

        <Border Grid.Row="1"
                CornerRadius="16"
                BorderBrush="#BDBDBD"
                BorderThickness="1"
                Background="#F5F5F5"
                HorizontalAlignment="Left"
                Margin="0,0,0,16"
                Padding="10,6">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">

                <!-- Уменьшенная иконка поиска -->
                <Viewbox MaxWidth="20" MaxHeight="20" Stretch="Uniform">
                    <icons:MaterialIcon Kind="Magnify"/>
                </Viewbox>

                <!-- Поле ввода -->
                <TextBox Watermark="Введите название расписания"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"
                         TextWrapping="NoWrap"
                         ClipToBounds="True"
                         HorizontalContentAlignment="Left"
                         MaxWidth="400"/>
            </StackPanel>
        </Border>

        <!-- Список расписаний -->
        <Border Grid.Row="2"
                BorderBrush="#BDBDBD"
                BorderThickness="1"
                CornerRadius="16"
                Background="#F5F5F5">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding ScheduleItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="scheduleList:ScheduleItemViewModel">
                            <!-- Обертка кнопкой для клика -->
                            <Button Command="{Binding SelectCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch">

                                <Border Margin="8" Padding="8" Background="White" CornerRadius="12" BorderBrush="#CCC"
                                        BorderThickness="0.5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Название -->
                                        <TextBlock Text="{Binding Name}" FontSize="16" VerticalAlignment="Center"
                                                   Margin="0,0,10,0" />

                                        <!-- Редактировать -->
                                        <Button Grid.Column="1"
                                                Command="{Binding EditCommand}"
                                                Classes="ToolbarButton"
                                                CommandParameter="{x:Null}">
                                            <Viewbox Width="24" Height="24">
                                                <icons:MaterialIcon Kind="Pencil" />
                                            </Viewbox>
                                        </Button>

                                        <!-- Удалить -->
                                        <Button Grid.Column="2"
                                                Command="{Binding DeleteCommand}"
                                                Classes="ToolbarButton"
                                                CommandParameter="{x:Null}">
                                            <Viewbox Width="24" Height="24">
                                                <icons:MaterialIcon Kind="DeleteOutline" />
                                            </Viewbox>
                                        </Button>
                                    </Grid>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Кнопка добавить -->
        <Button Grid.Row="3"
                Command="{Binding AddScheduleCommand}"
                Classes="ToolbarButton"
                HorizontalAlignment="Right"
                Margin="0,12,0,0">
            <Viewbox Width="24" Height="24">
                <icons:MaterialIcon Kind="Plus" />
            </Viewbox>
        </Button>
    </Grid>
</UserControl>