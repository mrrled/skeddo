<UserControl
    x:Class="newUI.Views.Navigation.NavigationBar"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:newUI.ViewModels.Navigation"
    x:DataType="vm:NavigationBarViewModel">

    <DockPanel Height="40">

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="10,0"
                    Spacing="10">

            <Button Content="Teachers"
                    Command="{Binding NavigateTeachersCommand}"
                    BorderThickness="1"
                    Padding="5,2"/>

            <Button Content="School Subjects"
                    Command="{Binding NavigateSchoolSubjectsCommand}"
                    BorderThickness="1"
                    Padding="5,2"/>

        </StackPanel>

    </DockPanel>
</UserControl>